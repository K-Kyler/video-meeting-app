extends layout

block content
    body 
    .div.bodyOpt
    .container.bg-opt
      form(action='/create' method='GET')
        .form-group
          div
            button.btn.btn-danger.btn-opt(type='submit') Create Room
      hr(style='border: 10px solid black; border-radius: 5px;')
      form(action='/join' method='POST')
        .form-group
          div
            input#roomID.form-control.input-opt(type='text' name='roomID' placeholder='Enter Room ID...')
            button.btn.btn-success.btn-opt(type='submit') Join Room




